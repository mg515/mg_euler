# EULER PROBLEM #43

import timeit

start = timeit.default_timer()


def is_palindrom(n):
    return str(n)==str(n)[::-1]


def invert(n):
    return int(str(n)[::-1])

def is_lychrel(n):
    sumd = n + invert(n)
    if is_palindrom(sumd):
        return True
    elif is_lychrel(n):
	return True

sol = is_lychrel(349)

  
    



stop = timeit.default_timer()

print "Solution: " + str(sol)          
print("Time consumed: " + str(stop - start))
